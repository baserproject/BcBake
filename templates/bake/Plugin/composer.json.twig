{% set namespace = namespace|replace({'\\': '\\\\'}) %}
{
    "name": "{{ package }}",
    "description": "{{ plugin }} plugin for baserCMS",
    "type": "cakephp-plugin",
    "license": "MIT",
    "require": {
        "php": ">=8.1",
        "baserproject/baser-core": "5.1.*",
        "josegonzalez/dotenv": "^4.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.5",
        "vierge-noire/cakephp-fixture-factories": "^3.0",
        "vierge-noire/cakephp-test-suite-light": "^3.0"
    },
    "autoload": {
        "psr-4": {
            "{{ namespace }}\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "{{ namespace }}\\Test\\": "tests/",
            "App\\": "tests/TestApp/src/",
            "Cake\\Test\\": "vendor/cakephp/cakephp/tests/"
        }
    }
}
